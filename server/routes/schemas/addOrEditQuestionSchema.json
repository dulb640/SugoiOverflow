{
  "type": "object",
  "properties": {
    "body": {
      "type": "string",
      "required": true,
      "minLength": 30,
      "maxLength": 10000
    },
    "title": {
      "type": "string",
      "required": true,
      "minLength": 10,
      "maxLength": 170
    },
    "attachments": {
      "type": "array",
      "required": false,
      "items": {
        "type": "string"
      }
    },
    "tags": {
      "type": "array",
      "minItems": 3,
      "maxItems": 10,
      "required": true,
      "items": {
        "type": "string",
        "minLength": 3,
        "maxLength": 30
      }
    },
    "people": {
      "type": "array",
      "minItems": 0,
      "maxItems": 5,
      "required": false,
      "items": {
        "type": "string",
        "minLength": 3,
        "maxLength": 30,
        "pattern": "\\S+@\\S+\\.\\S+"
      }
    }
  }
